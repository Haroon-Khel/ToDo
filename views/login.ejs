<link rel="stylesheet" href="splash.css">
<h1 id="heading">Login</h1>
<% if (typeof fl != 'undefined') { %>
<h3>Login unsuccessful</h3>
<% } %>

<% include partial/login/sidenav %>


<div class="grid-container" id="login-form">
    <div class="grid-form border">
        <form action="/login" class="form" method="POST">
            <div class="grid-container-content">
                <label for="username"><b>Username</b></label>
                <input type="text" id="login-username" placeholder="Username" name="username" required>
                <label for="password"><b>Password</b></label>
                <input type="password" id="login-password" placeholder="Password" name="password" required>
                <button class="button" style="grid-column: 2" type="submit">Login</button>
            </div>

        </form>
    </div>
</div>
<script type="text/javascript" src="index.js"></script>